/* page/component/suggest/suggest.wxss */
@import '../../common/common.wxss';

.rankList{
  margin:30rpx 0rpx;
}
.rankItem{
  background:#FFF;
  height:110rpx;
  position:relative;
  padding-left:100rpx;
  padding-right:24rpx;
  margin-bottom: 0rpx;
  padding-top: 2rpx;
  box-shadow:0px 0px 3px #eee;
}

.rankIndex{
  width:56rpx;
  height:56rpx;
  background: #e3e3e3;
  position:absolute;
  top:8rpx;
  left:30rpx;
  line-height:56rpx;
  text-align:center;
  font-size:32rpx;
  color:#aaa;
  border-radius: 50%;
  box-shadow:1px 1px 3px #ddd;
}
.rankItem:nth-of-type(1) .rankIndex{
  width:62rpx;
  height:62rpx;
  top:6rpx;
  left:26rpx;
  font-size:36rpx;
  background: #c3e3ff;
  color:#479de6;
  line-height: 62rpx;
  box-shadow:2px 2px 6px #ddd;
}
.rankItem:nth-of-type(2) .rankIndex,.rankItem:nth-of-type(3) .rankIndex{
  width:58rpx;
  height:58rpx;
  top:8rpx;
  left:26rpx;
  background: #fdf2e2;
  color:#fba529;
}
.proName{
  font-size:38rpx;
  line-height:38rpx;
  margin-top:12rpx;
  color:#333;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  padding-right:120rpx;
}
.account{
  font-size:30rpx;
  line-height:30rpx;
  text-align: right;
  color:#999;
  margin-top:19rpx;
}
.TxtColor_blue{
  color:#479de6;
}