@import '../../common/common.wxss';
page{
  background:#FFF;
  padding-top:30rpx;
}
.conts{
  height:auto;
  border:1rpx solid gainsboro;
  margin:30rpx 24rpx 0;
  background:#fff;
  padding-bottom: 24rpx;
}
.areas{
  height:260rpx;
  font-size: 36rpx;
  text-indent: 28rpx;
  padding:20rpx;
  padding-bottom: 12rpx;
  margin: 0 auto;
  overflow: hidden;   
  position: relative; 
  width:100%;
  box-sizing: border-box;
  border-radius:2px;
}
.currentWordNumber{
  font-size: 28rpx;
  color: gray;
  position: absolute;
  right: 30rpx;
  top: 6rpx;
}
.hint{
   font-size: 28rpx;
   position: absolute;
   top: 120rpx;
   left: 30rpx;
   color: #FF6600;
}

.typeSet{
  line-height:80rpx;
  font-size: 32rpx;
  padding:0 24px;
}
.typeSet>text{
  color:#008FFF;
  text-decoration:underline;
}
.imgList{
  height:60px;
  padding:0px 12px;
}
.imgBlock{
  width:60px;
  height:60px;
  border:1px solid #eee;
}
.imgBlock image{
   width:100%;
   height:100%;
}
.imgUploadBtn{
   float:right;
}
.imgUploadBtn image{
   width:24px;
   height:18px;
   vertical-align:middle;
}
.imgUploadBtn>text{
   vertical-align:middle;
   color:#999;
}