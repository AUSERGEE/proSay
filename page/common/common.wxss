.loading{
  padding: 10rpx;
  text-align: center;
  line-height:32px;
  color:#666;
}
.loading:before{
  display: inline-block;
  margin-right: 5rpx;
  vertical-align: middle;
  content: '';
  width: 40rpx;
  height: 40rpx;
  background-size: contain;
  animation: rotate 1s linear infinite;
}
.loading.complete:before{
  display: none;
}
.bottom-zan-loading{
  display:inline-block;
  width:22px;
  transform:scale(.8);
  -webkit-transform: scale(.8);
  vertical-align:middle;
  margin-right:8px;
}
.loadingBody{
  display:inline-block;
  margin-left:-26px;
}